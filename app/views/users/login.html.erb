<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'PettyCash', " ", class: 'navbar-brand' %>
    </div>
</div>
</nav>
<center>

<div class="container">

  <br>

	<h2>Petty Cash Management System</h2>

<br>

  <h3 >Login Here</h3>

  <br>

    <div style="width: 25%;">

      <%= form_for @user, :url=>{:controller=>"users", :action => "validate_login"} do |i| %>

      <form class="form-horizontal" role="form">

        <div class="form-group">
          <%= i.text_field :phone,:class=>"form-control",:placeholder=>"Enter your Mobile number",:required=>"",:autofocus=>true %>
        </div>
        <div class="form-group">
          <%= i.password_field :password,:class=>"form-control",:placeholder=>"Enter your password",:required=>"" %>
        </div>
         <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-danger" %>
  <% end %>

        <div class="form-group">
          <%= i.submit "Login",:class=>"btn btn-info" %>
        </div>
      
      <% end %>

      <h4 style="color: #2C5463;">New users please send a login request to Admin mail.</h4>
    
  </div>

</div>

</center>
